{
  "name": "bethstack-template",
  "version": "0.1.0",
  "scripts": {
    "tailwindcss": "bunx tailwindcss -i ./src/styles/globals.css -o ./public/globals.css --watch",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "bun run ./src/db/migrator.ts",
    "db:studio": "drizzle-kit studio --port 3333",
    "dev": "bun run --watch src/main.tsx",
    "start": "concurrently \"bun run tailwindcss\" \"bun run dev\""
  },
  "dependencies": {
    "@elysiajs/html": "^0.7.3",
    "@elysiajs/static": "^0.7.1",
    "@kitajs/html": "^3.0.10",
    "@kitajs/ts-html-plugin": "^1.3.3",
    "@libsql/client": "^0.4.0-pre.2",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.6",
    "drizzle-orm": "^0.29.0",
    "elysia": "latest"
  },
  "devDependencies": {
    "bun-types": "latest",
    "tailwindcss": "^3.3.5"
  },
  "module": "src/index.js"
}
